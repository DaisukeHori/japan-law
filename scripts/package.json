{
  "name": "japan-law-scripts",
  "version": "1.0.0",
  "description": "日本法令データベース管理スクリプト",
  "type": "module",
  "scripts": {
    "fetch": "npx ts-node fetch_all_laws.ts",
    "fetch:updates": "npx ts-node fetch_updates.ts",
    "convert:lawtext": "npx ts-node convert_to_lawtext.ts",
    "convert:markdown": "npx ts-node convert_to_markdown.ts",
    "analyze": "npx ts-node analyze_references.ts",
    "stats": "npx ts-node calculate_stats.ts",
    "build:index": "npx ts-node generate_index.ts",
    "build:all": "npm run fetch && npm run convert:lawtext && npm run convert:markdown && npm run analyze && npm run build:index"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "fast-xml-parser": "^4.3.4",
    "fuse.js": "^7.0.0",
    "marked": "^12.0.0",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
