{
  "name": "japan-law-scripts",
  "version": "1.0.0",
  "description": "日本法令データベース管理スクリプト",
  "type": "module",
  "scripts": {
    "fetch": "node --loader ts-node/esm fetch_all_laws.ts",
    "fetch:updates": "node --loader ts-node/esm fetch_updates.ts",
    "convert:lawtext": "node --loader ts-node/esm convert_to_lawtext.ts",
    "convert:markdown": "node --loader ts-node/esm convert_to_markdown.ts",
    "analyze": "node --loader ts-node/esm analyze_references.ts",
    "stats": "node --loader ts-node/esm calculate_stats.ts",
    "build:index": "node --loader ts-node/esm generate_index.ts",
    "build:all": "npm run fetch && npm run convert:lawtext && npm run convert:markdown && npm run analyze && npm run build:index",
    "update:smri": "node --loader ts-node/esm import_smri_data.ts",
    "update:legislators": "node --loader ts-node/esm auto_update.ts",
    "create:issues": "node --loader ts-node/esm create_bill_issues.ts",
    "create:prs": "node --loader ts-node/esm create_enactment_prs.ts"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "fast-xml-parser": "^4.3.4",
    "fuse.js": "^7.0.0",
    "marked": "^12.0.0",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
